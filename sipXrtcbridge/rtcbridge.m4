    FREESWITCH_LIBS="$FREESWITCH_LIBS -lz"
    FREESWITCH_LIBS="$FREESWITCH_LIBS -ldl"
    FREESWITCH_LIBS="$FREESWITCH_LIBS -lcrypt"
    FREESWITCH_LIBS="$FREESWITCH_LIBS -lrt"
    FREESWITCH_LIBS="$FREESWITCH_LIBS -lssl"
    FREESWITCH_LIBS="$FREESWITCH_LIBS -lcrypto"
    FREESWITCH_LIBS="$FREESWITCH_LIBS -ljpeg"
    FREESWITCH_LIBS="$FREESWITCH_LIBS -lodbc"

    AC_SUBST(FREESWITCH_LIBS)
]) 

