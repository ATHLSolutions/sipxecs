    FREESWITCH_LIBS="$FREESWITCH_LIBS $FREESWITCH_LIBDIR/libspeexdsp.a"
    FREESWITCH_LIBS="$FREESWITCH_LIBS $FREESWITCH_LIBDIR/libcryptomath.a"
    FREESWITCH_LIBS="$FREESWITCH_LIBS $FREESWITCH_LIBDIR/libsqlite3.a"
    FREESWITCH_LIBS="$FREESWITCH_LIBS $FREESWITCH_LIBDIR/libexpat.a"
    FREESWITCH_LIBS="$FREESWITCH_LIBS $FREESWITCH_LIBDIR/libsrtp.a"
    FREESWITCH_LIBS="$FREESWITCH_LIBS $FREESWITCH_LIBDIR/libspandsp.a"
    FREESWITCH_LIBS="$FREESWITCH_LIBS $FREESWITCH_LIBDIR/libedit.a"
    FREESWITCH_LIBS="$FREESWITCH_LIBS $FREESWITCH_LIBDIR/libtiff.a"
    FREESWITCH_LIBS="$FREESWITCH_LIBS $FREESWITCH_LIBDIR/libcurl.a"
    FREESWITCH_LIBS="$FREESWITCH_LIBS $FREESWITCH_LIBDIR/libpcre.a"
